<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget
  id="com.zoyalab.artfinder.portfolio"
  version="0.0.1"
  xmlns="http://www.w3.org/ns/widgets"
  xmlns:cdv="http://cordova.apache.org/ns/1.0"
  xmlns:gap = "http://phonegap.com/ns/1.0">

  <name>
    Artfinder Portfolio
  </name>
  <description>
    Artfinder Portfolio mobile application
  </description>
  <author email="hello@zoyalab.com" href="http://zoyalab.com/">
    zoya.lab, the web software company
  </author>

  <content src="index.html"/>

  <!-- App icon: Android -->
  <platform name="android">
    <icon src="res/icons/android/icon-36-ldpi.png" width="36" height="36" density="ldpi" gap:platform="android" gap:qualifier="ldpi" />
    <icon src="res/icons/android/icon-48-mdpi.png" width="48" height="48" density="mdpi" gap:platform="android" gap:qualifier="mdpi" />
    <icon src="res/icons/android/icon-72-hdpi.png" width="72" height="72" density="hdpi" gap:platform="android" gap:qualifier="hdpi" />
    <icon src="res/icons/android/icon-96-xhdpi.png" width="96" height="96" density="xhdpi" gap:platform="android" gap:qualifier="xhdpi" />
    <icon src="res/icons/android/icon-144-xxhdpi.png" width="144" height="144" density="xxhdpi" gap:platform="android" gap:qualifier="xxhdpi" />
  </platform>

  <platform name="ios">
    <!-- App icon: iPhone / iPod Touch @ iOS7+  -->
    <icon src="res/icons/ios/icon-60.png" gap:platform="ios" width="60" height="60" />
    <icon src="res/icons/ios/icon-60@2x.png" gap:platform="ios" width="120" height="120" />

    <!-- App icon: iPad @ iOS7+ -->
    <icon src="res/icons/ios/icon-76.png" gap:platform="ios" width="76" height="76" />
    <icon src="res/icons/ios/icon-76@2x.png" gap:platform="ios" width="152" height="152" />

    <!-- App icon: iPhone / iPod Touch @ iOS 6.1 -->
    <icon src="res/icons/ios/icon.png" gap:platform="ios" width="57" height="57" />
    <icon src="res/icons/ios/icon@2x.png" gap:platform="ios" width="114" height="114" />

    <!-- App icon: iPad @ iOS 6.1 -->
    <icon src="res/icons/ios/icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="res/icons/ios/icon-72@2x.png" gap:platform="ios" width="144" height="144" />
  </platform>

  <!-- App splash-screen: iPhone and iPod touch -->
  <gap:splash src="res/screen/ios/Default.png" gap:platform="ios" width="320" height="480" />
  <gap:splash src="res/screen/ios/Default@2x.png" gap:platform="ios" width="640" height="960" />

  <!-- App splash-screen: iPhone 5 / iPod Touch (5th Generation) -->
  <gap:splash src="res/screen/ios/Default-568h@2x.png" gap:platform="ios" width="640" height="1136" />

  <!-- App splash-screen: iPad -->
  <gap:splash src="res/screen/ios/Default-Portrait.png" gap:platform="ios" width="768" height="1024" />
  <gap:splash src="res/screen/ios/Default-Landscape.png" gap:platform="ios" width="1024" height="768" />

  <!-- App splash-screen: Retina iPad -->
  <gap:splash src="res/screen/ios/Default-Portrait@2x.png" gap:platform="ios" width="1536" height="2048" />
  <gap:splash src="res/screen/ios/Default-Landscape@2x.png" gap:platform="ios" width="2048" height="1536" />

  <preference name="webviewbounce" value="true"/>
  <preference name="UIWebViewBounce" value="true"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="BackupWebStorage" value="none"/>
  <preference name="StatusBarOverlaysWebView" value="true" />

  <feature name="StatusBar">
    <param name="ios-package" value="CDVStatusBar" onload="true"/>
  </feature>

  <plugins>
    <plugin name="Device" value="org.apache.cordova.device"/>
    <plugin name="File" value="org.apache.cordova.file"/>
  </plugins>

  <!-- Phonegap Build service plugins -->
  <gap:plugin name="fork.cordova.file" version="1.2.1" />
  <gap:plugin name="org.apache.cordova.device" version="0.2.8" />
  <gap:plugin name="nl.x-services.plugins.socialsharing" version="4.3.0" />
  <gap:plugin name="org.apache.cordova.statusbar" version="0.1.4" />

  <access origin="*"/>

</widget>
